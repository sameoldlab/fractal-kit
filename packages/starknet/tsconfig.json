{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		
		"skipLibCheck": true,
		"allowJs": false,

		"outDir": "dist",
		"declaration": true,
		"isolatedModules": true,
	},
	"include": ["src"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
